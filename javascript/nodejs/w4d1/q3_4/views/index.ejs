<!DOCTYPE html>

<html>
    <head>
        <meta charset="utf-8" />
    </head>
    <body>
        <form action="/addToCart" method="post">
            <table>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                </tr>
                <%for (const p in products) {%>
                    <tr>
                        <td><input type="text" readonly name="name" value="<%=products[p].getName()%>"/></td>
                        <td><input type="text" readonly name="price" value="<%=products[p].getPrice()%>"/></td>
                        <td><input type="text" readonly name="quantity" value="<%=products[p].getQuantity()%>"/></td>
                        <td>
                            <a href="/product?index=<%=p%>">Add To Cart</a>
                        </td>
                    </tr>
                <%}%>
            </table>
        </form>
    </body>
</html>