<!DOCTYPE html>

<html>
    <head>
        <meta charset="utf-8" />
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
        <script src="product_hander.js"></script>
    </head>
    <body>
        <form action="/addToCart" >
            <table>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                </tr>
                <%for (const p in products) {%>
                    <tr>
                        <input type="hidden" value="<%=p%>" id="index<%=p%>" />
                        <td><input type="text" id="name" readonly name="name" value="<%=products[p].getName()%>"/></td>
                        <td><input type="text" id="price" readonly name="price" value="<%=products[p].getPrice()%>"/></td>
                        <td><input type="text" id="quantity" readonly name="quantity" value="<%=products[p].getQuantity()%>"/></td>
                        <td>
                            <!-- <a id="addToCart" href="/product?index=<%=p%>">Add To Cart</a> -->
                            <a name="addToCart" id="addToCart_<%=p%>" href="">Add To Cart</a>
                        </td>
                    </tr>
                <%}%>
            </table>
            <div><a href="/cart" id="showCart">Go to cart</a></div>
            <div id="msg"></div>
        </form>
    </body>
</html>